{
  "name": "@taiyuuki/esbuild-plugin-import-glob",
  "version": "0.1.3",
  "description": "A esbuild plugin which allows to import multiple files using the glob syntax.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run clean && npm run compile",
    "compile": "tsup",
    "clean": "rimraf ./dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taiyuuki/esbuild-plugin-import-glob.git"
  },
  "keywords": [
    "esbuild",
    "esbuild-plugin",
    "import",
    "glob"
  ],
  "author": "Thomas Schaaf <schaaf@komola.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taiyuuki/esbuild-plugin-import-glob/issues"
  },
  "homepage": "https://github.com/taiyuuki/esbuild-plugin-import-glob#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "esbuild": "^0.9.2",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tsup": "^6.5.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "fast-glob": "^3.2.5"
  }
}
